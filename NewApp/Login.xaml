<Page x:Class="NewApp.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewApp"
      mc:Ignorable="d" 
      Height="400" Width="550"
      Title="Login">

    <Grid>
        <Frame x:Name="pageLogin" NavigationUIVisibility="Hidden"/>
        <Label x:Name="oh" HorizontalContentAlignment="Center" Content="Login" Height="25" Width="80" Margin="25,130,195,150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="log" Height="20" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>
        <Label x:Name="ass" HorizontalContentAlignment="Center" Content="Heslo" Height="25" Width="80" Margin="25,155,195,120" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="pass" Height="20" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="110,155,110,125"/>
        <Button x:Name="conf" Background="CornflowerBlue" Height="20" Width="100" Content="Přihlásit se" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="226,233,224,142" Click="conf_Click"/>
    </Grid>
</Page>
